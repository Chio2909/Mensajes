<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MnsjAn.Views.start" 
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content  >
    
    <Grid>
            <Grid.Background>
                <LinearGradientBrush EndPoint="0,1">
                  
                    <GradientStop Color=" #401430"
                          Offset="0.1" />
                    <GradientStop Color="#A60F55"
                          Offset="1.0" />
                </LinearGradientBrush>
            </Grid.Background>
            
            <StackLayout VerticalOptions="CenterAndExpand" Spacing="20" >
                <!--Logo-->
                <Image
                Source="logo.png"
               HeightRequest="160" Margin="0,30" 
                />
                <!--Titulo-->
                <Label 
                Text="¡Recibe preguntas secretas!"
                HorizontalTextAlignment="Center"
                TextColor="White"
                FontSize="25"
                FontAttributes="Bold"
                Margin="42,0,42,70"
                />
                <!--Boton comenzar-->
                <!--<Button 
                x:Name="btnComenzar"
                Text="; C.o.m.e.n.z.a.r"
              FontFamily="FontIcons"
                BackgroundColor="#401430"
                BorderColor="#A60F55"
                    BorderWidth="1.5"
                TextColor="white"
                Margin="20,0"
                FontSize="22"
                CornerRadius="15"
                Clicked="btnComenzar_Clicked">
                </Button>-->

                <ImageButton  x:Name="btnComenzar"
                    Source="com.png"
                    HorizontalOptions="Center"
                    VerticalOptions="CenterAndExpand" 
                   Clicked="btnComenzar_Clicked"
                  WidthRequest="300"
                  BackgroundColor="Transparent"
                            />

                <!--Condiciones y politicas-->
                <Label 
                TextColor="White"
                FontSize="14"
                Margin="25,30,25,0"
                VerticalOptions="End"
                HorizontalTextAlignment="Center"
                >
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Al continuar, aceptas nuestra " />
                        <Span Text="Condiciones de uso"
                  TextDecorations="Underline" >
                            <Span.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding TapCommand}"
                                          CommandParameter="https://nglapi.000webhostapp.com/terms.php" />
                            </Span.GestureRecognizers>
                        </Span>
                        <Span Text=" y que has leido y aceptado nuestras " />
                        <Span Text="Politicas de privacidad."
                  TextDecorations="Underline" >
                            <Span.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TapCommand}"
                                          CommandParameter="https://nglapi.000webhostapp.com/privacy.php" />
                            </Span.GestureRecognizers>
                        </Span>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
           
        </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>