                <Label 
                Text="Nombre de usuario"
    HorizontalTextAlignment="Center"
                TextColor="White"
                HorizontalOptions="CenterAndExpand"
                FontSize="22"
                FontAttributes="Bold"
    Margin="20,0,20,10"
                />
               
                <!--Nombre usuario-->
                
