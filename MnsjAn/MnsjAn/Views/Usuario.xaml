                <Label 
                TextColor="White"
                FontSize="14"
                Margin="25,100,25,0"
                VerticalOptions="End"
                HorizontalTextAlignment="Center"
                >
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="¿No tienes una cuenta? " />
                            <Span Text="Regístrate aquí"
                  TextColor="#F2E857" FontAttributes="Bold" >
                                <Span.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnLabelClicked" />
